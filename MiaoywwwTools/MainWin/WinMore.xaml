<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="MiaoywwwTools.WinMore"
    mc:Ignorable="d"  Width="985" Height="565" Background="Transparent" Title="WinMore">
    <Border CornerRadius="10,10,10,10" Background="Transparent">
        <Grid>
            <Grid Margin="10,10,724,10">
                <Border Background="#FFF5F7FB" CornerRadius="10" >
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" ShadowDepth="0" BlurRadius="5" Opacity="0.5" Direction="0" />
                    </Border.Effect>
                </Border>
                <Grid>
                    <Button x:Name="Btn_RandomDraw" Content="点名器" Height="48" Width="207" BorderBrush="#FF868686" Foreground="White" FontSize="20" FontWeight="Bold" Click="Btn_RandomDraw_Click" Margin="0,220,0,0" VerticalAlignment="Top">
                        <Button.Background>
                            <SolidColorBrush Color="Black" Opacity="0.7" />
                        </Button.Background>
                    </Button>
                    <Button x:Name="Btn_WallPaper" Content="壁纸" Height="48" Width="207" BorderBrush="#FF868686" Foreground="White" FontSize="20" FontWeight="Bold" Click="Btn_WallPaper_Click" Margin="0,272,0,0" VerticalAlignment="Top">
                        <Button.Background>
                            <SolidColorBrush Color="#FF00A7FF" Opacity="0.7" />
                        </Button.Background>
                    </Button>
                </Grid>
            </Grid>
            <ContentControl x:Name="NestPage" Content="" HorizontalAlignment="Left" Width="700" Margin="275,10,0,10" />
        </Grid>
    </Border>
</Page>