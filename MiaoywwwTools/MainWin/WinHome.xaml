<Page x:Class="MiaoywwwTools.WinHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Home" Width="985" Height="565" Background="Transparent">
    <Page.Resources>
        <ResourceDictionary>
            <ContextMenu x:Key="Image_Face_Menu">
                <MenuItem Name="CleanUpFace" Click="CleanUpFace_Click" Header="清除头像" />
            </ContextMenu>
            <Storyboard x:Key="HideLabel">
                <DoubleAnimation Duration="0:0:2" From="1" To="0" Storyboard.TargetProperty="Opacity" FillBehavior="Stop" Completed="HideLabel_Completed" />
            </Storyboard>
            <Storyboard x:Key="ShowLabel">
                <DoubleAnimation Duration="0:0:2" From="0" To="1" Storyboard.TargetProperty="Opacity" FillBehavior="HoldEnd" Completed="ShowLabel_Completed" />
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    <Border CornerRadius="0,5,5,0">
        <Border.Background>
            <ImageBrush ImageSource="/resources/Images/wallpaper/90765657_p0.png" Stretch="None">
                <ImageBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5" />
                        <SkewTransform CenterX="0.5" CenterY="0.5" />
                        <RotateTransform CenterX="0.5" CenterY="0.5" />
                        <TranslateTransform Y="0" />
                    </TransformGroup>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Border.Background>
        <Grid x:Name="MainGrid" RenderTransformOrigin="0.5,0.5" Loaded="MainGrid_Loaded" Margin="0,0,-2,0">
            
            <Label x:Name="Label_Emotion" Height="37" Margin="0,134,0,0" VerticalAlignment="Top" Width="120" Background="{x:Null}" Foreground="#FF212121" FontSize="15" FontWeight="Bold" BorderThickness="0,0,0,0" FontFamily="Microsoft JhengHei UI" Opacity="0" BorderBrush="#FF3E3E3E" />
            <Grid HorizontalAlignment="Center" Height="75" Margin="0,54,0,0" VerticalAlignment="Top" Width="967">
                <Border Background="#FFF9F9F9" CornerRadius="8,8,8,8">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFD6D6D6" BlurRadius="3" RenderingBias="Quality" Opacity="0.5"></DropShadowEffect>
                    </Border.Effect>
                </Border>

                <Label x:Name="Label_HitokotoContent" Content="MiaoywwwTools" VerticalAlignment="Top" Height="38" Width="967" FontSize="18" Background="Transparent" Foreground="Black" MouseLeftButtonDown="Label_Title_MouseLeftButtonDown" BorderBrush="Transparent" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" FontFamily="Bahnschrift" BorderThickness="0,0,0,0" />
                <Label x:Name="Label_HitokotoFrom" Content="-Miaomiaoywww" Margin="0,38,0,0" VerticalAlignment="Top" Height="38" Width="967" FontSize="13" Background="Transparent" Foreground="Black" MouseLeftButtonDown="Label_Title_MouseLeftButtonDown" BorderBrush="Transparent" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontWeight="Bold" FontFamily="Segoe UI" BorderThickness="0,0,0,0" />
            </Grid>
        </Grid>
    </Border>
</Page>